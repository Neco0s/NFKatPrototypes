<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/kat_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/kat_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_background"/>

        <RelativeLayout
            android:layout_marginStart="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:id="@+id/kat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/kat_btc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/kat_eur_trend"/>

            <TextView
                android:id="@+id/kat_eth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ETH"
                android:layout_below="@id/kat_eur"
                android:layout_alignStart="@+id/kat_btc"/>

            <TextView
                android:id="@+id/kat_eur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EUR"
                android:layout_below="@+id/kat_btc"
                android:layout_alignStart="@id/kat_btc"/>

            <TextView
                android:id="@+id/kat_eur_trend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trend"
                android:layout_below="@id/kat_btc"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/kat_eth_trend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trend"
                android:layout_below="@id/kat_eur"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/act_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kat_card"
        android:layout_alignParentEnd="true"
        android:text="Action"/>

</RelativeLayout>